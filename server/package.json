{
	"name": "backend-for-the-house-searcher",
	"version": "1.0.0",
	"main": "dist/index.js",
	"scripts": {
		"dev": "nodemon src/server.ts --clear",
		"generate-prod": "drizzle-kit generate --config drizzle.config-prod.ts",
		"generate-test": "drizzle-kit generate --config drizzle.config-test.ts",
		"parcel-build": "parcel build ./server.ts --dist-dir dist",
		"tailwind-build": "npx tailwindcss -i ./src/public/styles.css -o ./src/public/output.css --watch --minify",
		"unit-tests": "docker compose up -d && sleep 10 && npm run generate-test && npm run migrate-test && jest tests/unit --coverage --verbose --runInBand && docker compose down",
		"integration-tests": "docker compose up -d && sleep 10 && npm run generate-test && npm run migrate-test && jest tests/integration --coverage --verbose --runInBand && docker compose down",
		"migrate-prod": "drizzle-kit migrate --config drizzle.config-prod.ts",
		"migrate-test": "drizzle-kit migrate --config drizzle.config-test.ts",
		"doc": "typedoc --options typedoc.json --logLevel Verbose --name 'House Searcher API'",
		"deployment-tests": "cd ../ && act -W '.github/workflows/jest-tests.yml' --secret-file 'my.secrets' && cd server",
		"start": "node dist/index.js",
		"heroku-postbuild": "npm run parcel-build && npm run generate-prod && npm run migrate-prod"
	},
	"keywords": [],
	"author": "Sebastian",
	"license": "ISC",
	"description": "",
	"dependencies": {
		"axios": "^1.7.9",
		"bcrypt": "^5.1.1",
		"better-sqlite3": "^11.7.0",
		"cookie-parser": "^1.4.7",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.38.3",
		"express": "^4.21.2",
		"express-jwt": "^8.5.1",
		"express-session": "^1.18.1",
		"jsonwebtoken": "^9.0.2",
		"morgan": "^1.10.0",
		"node-postgres": "^0.6.2",
		"nodemon": "^3.1.9",
		"passport": "^0.7.0",
		"passport-google-oauth2": "^0.2.0",
		"passport-http-bearer": "^1.0.1",
		"pg": "^8.13.1",
		"unique-username-generator": "^1.4.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.17.0",
		"@sqlitecloud/drivers": "^1.0.354",
		"@types/bcrypt": "^5.0.2",
		"@types/better-sqlite3": "^7.6.12",
		"@types/cookie-parser": "^1.4.8",
		"@types/express": "^4.17.21",
		"@types/express-session": "^1.18.1",
		"@types/jest": "^29.5.14",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/morgan": "^1.9.9",
		"@types/node": "^22.10.2",
		"@types/passport": "^1.0.17",
		"@types/passport-google-oauth2": "^0.1.10",
		"@types/passport-http-bearer": "^1.0.41",
		"@types/pg": "^8.11.10",
		"@types/supertest": "^6.0.2",
		"drizzle-kit": "^0.30.1",
		"eslint": "^9.17.0",
		"globals": "^15.14.0",
		"grunt": "^1.6.1",
		"grunt-cli": "^1.5.0",
		"grunt-contrib-clean": "^2.0.1",
